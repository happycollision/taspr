{
  "name": "taspr",
  "version": "0.1.0",
  "description": "CLI tool for managing stacked PRs on GitHub",
  "bin": {
    "taspr": "./dist/taspr"
  },
  "type": "module",
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --compile --outfile dist/taspr",
    "test": "bun test",
    "test:github:setup": "bun run scripts/setup-taspr-check.ts",
    "test:github": "GITHUB_INTEGRATION_TESTS=1 bun test tests/integration/",
    "lint": "oxlint --type-aware",
    "types": "tsc --noEmit",
    "format": "oxfmt",
    "check": "bun run types && bun run lint && bun run format --check",
    "prepare": "husky"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "oxlint --type-aware"
    ],
    "*": [
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  }
}
